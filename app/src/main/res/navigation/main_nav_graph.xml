<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.recipe_app.ui.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>

    <!-- Search Fragment (ðŸ’¡ this is what was missing) -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.recipe_app.ui.main.SearchFragment"
        android:label="Search">
        <action
            android:id="@+id/action_searchFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>

    <!-- Recipe Detail Fragment with argument -->
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.example.recipe_app.ui.RecipeDetailFragment"
        android:label="Recipe Details">
        <argument
            android:name="selectedRecipe"
            app:argType="com.example.recipe_app.model.Recipe" />
    </fragment>

</navigation>
