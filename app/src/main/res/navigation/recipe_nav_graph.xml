<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/recipeListFragment">
    <fragment
        android:id="@+id/recipeListFragment"
        android:name="com.example.final_summer_course.features.views.recipe.RecipeListFragment"
        android:label="Recipe List">
        <action
            android:id="@+id/action_recipeListFragment_to_recipeItemDetailsFragment"
            app:destination="@id/recipeItemDetailsFragment" />
        <action
            android:id="@+id/action_recipeListFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_recipeListFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeItemDetailsFragment"
        android:name="com.example.final_summer_course.features.views.recipe.RecipeItemDetailsFragment"
        android:label="Recipe Item Details">
        <action
            android:id="@+id/action_recipeItemDetailsFragment_to_recipeListFragment"
            app:destination="@id/recipeListFragment" />
        <argument
            android:name="meal"
            app:argType="com.example.final_summer_course.features.views.recipe.models.MealModel" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.final_summer_course.features.views.favorite.FavoriteFragment"
        android:label="Favorite Recipes">
        <action
            android:id="@+id/action_favoriteFragment_to_recipeItemDetailsFragment"
            app:destination="@id/recipeItemDetailsFragment" />
        <action
            android:id="@+id/action_favoriteFragment_to_recipeListFragment"
            app:destination="@id/recipeListFragment" />
        <action
            android:id="@+id/action_favoriteFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.final_summer_course.features.views.search.SearchFragment"
        android:label="Search Recipes">
        <action
            android:id="@+id/action_searchFragment_to_recipeItemDetailsFragment"
            app:destination="@id/recipeItemDetailsFragment" />
        <action
            android:id="@+id/action_searchFragment_to_recipeListFragment"
            app:destination="@id/recipeListFragment" />
        <action
            android:id="@+id/action_searchFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
    </fragment>
</navigation>