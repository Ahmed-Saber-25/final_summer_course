<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1C18E60"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:layout_marginTop="32dp"
        tools:context=".ui.RecipeDetailFragment">

        <!-- Recipe Image -->

        <!-- Recipe Title -->
        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_margin="16dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detailTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/rich_maroon"
            android:fontFamily="@font/dancing_script_bold"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/detailImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Delicious Chicken Alfredo" />

        <!-- Short Description -->
        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/detailTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="A creamy, cheesy, and satisfying pasta recipe that brings comfort in every bite." />

        <!-- Instructions (collapsible) -->
        <TextView
            android:id="@+id/detailinstructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/detailDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Step-by-step instructions go here. This preview shows only 3 lines. Tap below to expand and read more instructions." />

        <!-- Expand/Collapse Button -->
        <Button
            android:id="@+id/expandButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Show Full Recipe"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/rich_maroon"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/detailinstructions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Watch Video Button -->
        <Button
            android:id="@+id/videoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Watch Video"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/rich_maroon"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/expandButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Favorite Button -->
        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="save_favorite"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_favorite_border"
            app:layout_constraintTop_toBottomOf="@id/videoButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Inside the existing FrameLayout (videoOverlay), just before </FrameLayout> -->

        <!-- Video Overlay (Hidden by default) -->

        <ImageButton
            android:id="@+id/closeOverlayButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|end"
            android:layout_margin="12dp"
            android:background="@android:color/transparent"
            android:contentDescription="Close"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <FrameLayout
            android:id="@+id/videoOverlay"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:visibility="gone"
            android:layout_margin="16dp"
            android:elevation="8dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Playing..."
                android:textColor="@android:color/white"
                android:layout_gravity="center" />

            <WebView
                android:id="@+id/webViewPlayer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="gone" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
