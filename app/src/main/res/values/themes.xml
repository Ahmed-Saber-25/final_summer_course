<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplicationBNV" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Crucial lines to remove default ActionBar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- If targeting older Android versions or using specific parent themes,
             you might also need the 'android:' prefix for these: -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Custom Theme for the Toolbar's main content (title, subtitle) -->
    <!-- Apply this theme to the Toolbar's 'android:theme' attribute -->
    <style name="AppToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Color for the Toolbar's title and subtitle text -->
        <item name="android:textColorPrimary">@color/your_toolbar_title_color</item>
        <!-- Optional: Color for the navigation icon (e.g., back arrow) -->
        <item name="colorControlNormal">@color/your_toolbar_icon_color</item>
    </style>


</resources>